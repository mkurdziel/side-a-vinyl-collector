# Database Configuration
POSTGRES_DB=vinyl_collector
POSTGRES_USER=vinyl_user
POSTGRES_PASSWORD=vinyl_password
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PORT=6379

# API Configuration
NODE_ENV=development
VITE_API_URL=http://localhost:5000

# Discogs API
DISCOGS_TOKEN=your_discogs_token_here

# Vision AI Providers
# Configure at least one provider. If both are configured, the system will use
# the primary provider first, then fallback to the secondary if confidence is low.

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI GPT-4
OPENAI_API_KEY=your_openai_api_key_here

# Vision Provider Configuration
# Primary provider to use first (default: 'openai')
# Options: 'anthropic' or 'openai'
VISION_PROVIDER=openai

# Minimum confidence threshold (0-100, default: 90)
# If primary provider returns confidence below this threshold,
# the system will try the fallback provider (if configured)
VISION_MIN_CONFIDENCE=90

# MusicBrainz Cover Art Configuration
# Set to 'false' to disable MusicBrainz lookups and use only Discogs artwork
# When disabled, all cover art will be cached locally from Discogs
# Default: true
MUSICBRAINZ_ENABLED=true
